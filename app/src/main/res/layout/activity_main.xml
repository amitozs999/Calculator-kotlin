<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:layout_height="330dp"
            android:gravity="bottom">
        <TextView
                android:id="@+id/tvFirst"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="right"
                tools:text="First num"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvSecond"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="right"
                tools:text="Second Num"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvOp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                tools:text="Op"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="50sp"android android:layout_marginLeft="300dp"
                android android:text="0"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:id="@+id/tv"/>
    </LinearLayout>
    <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="74dp">
            <Button
                    android:text="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button1"/>
            <Button
                    android:text="2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button2"/>
            <Button
                    android:text="3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button3"/>
            <Button
                    android:text="+"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/plusbtn"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="69dp">
            <Button
                    android:text="4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button4"/>
            <Button
                    android:text="5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button5"/>
            <Button
                    android:text="6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button6"/>
            <Button
                    android:text="-"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/minusbtn"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="66dp">
            <Button
                    android:text="7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button7"/>
            <Button
                    android:text="8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button8"/>
            <Button
                    android:text="9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button9"/>
            <Button
                    android:text="*"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/multibtn"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="88dp">
            <Button
                    android:text="C"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/clearbtn"/>
            <Button
                    android:text="0"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/button0"/>
            <Button
                    android:text="="
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/eqbtn"/>
            <Button
                    android:text="/"
                    android:layout_width="100dp"
                    android:layout_height="40dp" android:id="@+id/divbtn"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
